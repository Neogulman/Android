<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity_Basket">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[물품 추가 방법]"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가가능목록의 물품 클릭 후 위시리스트에 추가"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/list_basket"
        android:choiceMode="singleChoice"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:layout_above="@+id/listadd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="─────────────────────────"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="뒤로가기"
        android:id="@+id/listback2"
        android:background="@drawable/button"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="위시리스트"
        android:id="@+id/listwish"
        android:layout_marginRight="30dp"
        android:background="@drawable/button"
        android:layout_alignEnd="@+id/list_basket"
        android:layout_alignTop="@+id/listback2" />

</RelativeLayout>
